{
  "name": "vibewriting",
  "version": "0.1.0",
  "private": true,
  "description": "Minimal Electron app scaffold for VibeWriting.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5174 && cross-env VITE_DEV_SERVER_URL=http://localhost:5174 nodemon --watch main.js --watch preload.js --ext js,json --exec electron .\"",
    "build:renderer": "vite build",
    "pack": "vite build && electron-builder --dir",
    "build": "vite build && electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "vite": "^5.4.0",
    "wait-on": "^7.2.0",
    "nodemon": "^3.1.0"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "pdfjs-dist": "^4.7.76"
  },
  "build": {
    "appId": "com.vibewriting.app",
    "productName": "VibeWriting",
    "asar": true,
    "files": [
      "main.js",
      "preload.js",
      "dist/**",
      "!**/*.map",
      "!renderer/**",
      "!**/out/**",
      "!**/coverage/**"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "zip"]
    },
    "linux": {
      "category": "Utility",
      "target": ["AppImage", "deb"]
    }
  }
}
